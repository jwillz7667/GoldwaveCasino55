# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/casino
MONGODB_USER=
MONGODB_PASS=
MONGODB_AUTH_SOURCE=admin
MONGODB_REPLICA_SET=
MONGODB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Security
BCRYPT_ROUNDS=10
ENABLE_2FA=true
SESSION_SECRET=your-session-secret

# Game Configuration
DEFAULT_INITIAL_BALANCE=1000
MIN_BET_AMOUNT=1
MAX_BET_AMOUNT=10000
MAX_DAILY_DEPOSIT=5000
MAX_DAILY_WITHDRAWAL=5000

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_REQUEST_LOGGING=true

# Email Configuration (if needed)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# External Services (if needed)
PAYMENT_GATEWAY_API_KEY=
KYC_SERVICE_API_KEY=

# Development Tools
ENABLE_SWAGGER=true
ENABLE_API_DOCS=true 